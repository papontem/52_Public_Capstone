{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://otdtil.com/factUpdate.schema.json",
  "type": "object",
  "properties": {
    "text_title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 250
    },
    "fact_date":{
      "type":"string",
      "maxLength": 10
    },
    "page_id":{
      "type":"integer",
      "minLength": 1
    }
  },
  "additionalProperties": false,
  "required": [
    "text_title",
    "fact_date",
    "page_id"
  ]
}

